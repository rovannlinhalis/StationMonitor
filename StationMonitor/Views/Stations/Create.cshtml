@model StationMonitor.Entidades.Station

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Station</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group" class="control-label"></label>
                <select asp-for="@Model.GroupId" asp-items="@{ new SelectList((ViewData["grupos"] as List<StationMonitor.Entidades.Group>), "Id", "Name");} " class="form-control"></select>
                <span asp-validation-for="@Model.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
