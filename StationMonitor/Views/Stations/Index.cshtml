@model IEnumerable<StationMonitor.Entidades.Station>

@{
    ViewData["Title"] = "Index";
}

<h2>My Stations</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-sm table-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpu)
                </th>
                <th>
                    Temp. °C
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td  style="max-width:200px" class="font-weight-light text-justify text-nowrap">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td style="max-width:200px" class="font-weight-bold">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-truncate" style="max-width:200px">
                        @Html.DisplayFor(modelItem => item.Cpu)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.LastEvent.CurrentTemperature)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
